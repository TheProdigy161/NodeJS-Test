{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES5",
    "paths": {
      "@models/*": [ "../domain/models/*" ],
      "@enums/*": [ "../domain/enums/*" ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../domain/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".dist",
    "dist"
  ],
  "references": [
    { "path": "../domain" }
  ]
}