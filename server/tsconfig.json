{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2019",
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@routes/*": [ "src/routes/*" ],
      "@models/*": [ "../domain/models/*" ],
      "@enums/*": [ "../domain/enums/*" ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    ".dist",
    "dist"
  ],
  "references": [
    { "path": "../domain" }
  ]
}